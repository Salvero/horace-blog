{{!-- The post feed item --}}
<article class="{{post_class}} inner">
    <header class="post-header">
        <div class="post-meta">
            {{#if featured}}<span class="post-featured-badge">{{t "Featured"}}</span> &sol; {{/if}}
            <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
        </div>
        <h2 class="post-title h3"><a href="{{{url}}}">{{title}}</a></h2>
    </header>
    {{#if feature_image}}
    <a href="{{url}}" class="post-thumbnail"><img class="post-thumbnail-image" srcset="{{img_url feature_image size="xxs"}} 150w, {{img_url feature_image size="xs"}} 300w, {{img_url feature_image size="s"}} 600w, {{img_url feature_image size="m"}} 800w, {{img_url feature_image size="l"}} 1100w, {{img_url feature_image size="xl"}} 1600w" sizes="(max-width: 766px) 94vw, 720px" src="{{img_url feature_image size="m"}}" alt="{{title}}" /></a>
    {{/if}}
    <div class="post-content">
        <p class="post-excerpt{{#unless custom_excerpt}} post-excerpt-dots{{/unless}}">{{excerpt words="40"}}</p>
        {{#if tags}}
        <p class="post-tags">{{tags separator=" "}}</p>
        {{/if}}
    </div>
</article>
