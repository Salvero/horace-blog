{{!-- Displays the recent posts list --}}
<section class="widget widget-recent-posts">
    <h2 class="widget-title small-title">{{t "Recent Articles"}}</h2>
    {{#get "posts" limit="3" as |recent_posts|}}
    <ul>
        {{#foreach recent_posts visibility="all"}}
        <li>
            <div class="post-header">
                <div class="post-meta">
                    <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
                </div>
                <h3 class="post-title"><a href="{{{url}}}">{{title}}</a></h3>
            </div>
            {{#if feature_image}}
            <a href="{{url}}" class="post-thumbnail"><img class="post-thumbnail-image" src="{{img_url feature_image size="xxs"}}" alt="{{title}}" /></a>
            {{/if}}
        </li>
        {{/foreach}}
    </ul>
    {{/get}}
</section>
