{{!-- Newer and older posts links --}}
<nav class="pagination inner">
    <div class="nav-links">
        {{#if prev}}
        <a class="newer-posts btn btn-secondary btn-icon" href="{{page_url prev}}">{{> "icons/arrow-left"}}<span class="screen-reader-text">{{t "Newer Posts"}}</span></a>
        {{/if}}
        <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
        {{#if next}}
        <a class="older-posts btn btn-secondary btn-icon" href="{{page_url next}}"><span class="screen-reader-text">{{t "Older Posts"}}</span>{{> "icons/arrow-right"}}</a>
        {{/if}}
    </div>
</nav>
