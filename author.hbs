{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Includes the theme header - partials/header.hbs --}}
{{> header}}

{{!-- The content area on the author archive page --}}
<main id="main" class="content outer">

    {{!-- Everything inside the #author tags pulls data from the author --}}
    {{#author}}
    <header class="archive-header inner">
        <h1 class="archive-title">{{name}}</h1>
        <p class="archive-description">{{plural ../pagination.total empty=(t "A collection of 0 posts") singular=(t "A collection of % post") plural=(t "A collection of % posts")}}</p>
    </header>
    {{/author}}

    {{!-- Includes the post loop - partials/loop-archive.hbs --}}
    {{> "loop-archive"}}

</main>
